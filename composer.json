{
    "name": "dragon-code/web-app",
    "description": "The Dragon Code Project",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1",
        "cviebrock/eloquent-sluggable": "^9.0",
        "dragon-code/web-core": "^0.0.6"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Database\\Factories\\": "database/factories",
            "Database\\Seeders\\": "database/seeders"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/*": true,
            "symfony/*": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-update-cmd": [
            "php artisan vendor:publish --tag=laravel-assets --force --ansi",
            "php artisan lang:update --ansi",
            "php artisan env:sync --ansi",
            "php artisan telescope:publish --ansi",
            "php artisan optimize:clear --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump --ansi",
            "@php artisan package:discover --no-ansi"
        ]
    }
}
